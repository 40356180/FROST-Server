<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <security-role>
        <description>Role that is allowed to initiate database upgrades.</description>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description>Role that is allowed to read (GET) entities.</description>
        <role-name>read</role-name>
    </security-role>
    <security-role>
        <description>Role that is allowed to create (POST) new entities.</description>
        <role-name>create</role-name>
    </security-role>
    <security-role>
        <description>Role that is allowed to update (PUT, PATCH) entities.</description>
        <role-name>update</role-name>
    </security-role>
    <security-role>
        <description>Role that is allowed to delete entities.</description>
        <role-name>delete</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>OPTIONS</web-resource-name>
            <http-method>OPTIONS</http-method>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
    </security-constraint>

    <security-constraint>
        <display-name>DatabaseStatus</display-name>
        <web-resource-collection>
            <web-resource-name>DatabaseStatus</web-resource-name>
            <url-pattern>/DatabaseStatus</url-pattern>
            <url-pattern>/v0.0</url-pattern>
            <url-pattern>/v0.0/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Reading the database status and initiating database upgrades.</description>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Reading Entities</display-name>
        <web-resource-collection>
            <web-resource-name>SensorThingsAPI GET</web-resource-name>
            <url-pattern>/v1.0</url-pattern>
            <url-pattern>/v1.0/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>read</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Creating Entities</display-name>
        <web-resource-collection>
            <web-resource-name>SensorThingsAPI POST</web-resource-name>
            <url-pattern>/v1.0</url-pattern>
            <url-pattern>/v1.0/*</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>create</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Updating Entities</display-name>
        <web-resource-collection>
            <web-resource-name>SensorThingsAPI PUT PATCH</web-resource-name>
            <url-pattern>/v1.0</url-pattern>
            <url-pattern>/v1.0/*</url-pattern>
            <http-method>PUT</http-method>
            <http-method>PATCH</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>update</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Deleting Entities</display-name>
        <web-resource-collection>
            <web-resource-name>SensorThingsAPI DELETE</web-resource-name>
            <url-pattern>/v1.0</url-pattern>
            <url-pattern>/v1.0/*</url-pattern>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>delete</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Admin Access</display-name>
        <web-resource-collection>
            <web-resource-name>SensorThingsAPI ADMIN</web-resource-name>
            <url-pattern>/v1.0</url-pattern>
            <url-pattern>/v1.0/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
            <http-method>PATCH</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>

    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
        <init-param>
            <param-name>cors.allowed.origins</param-name>
            <param-value>*</param-value>
        </init-param>
        <init-param>
            <param-name>cors.allowed.methods</param-name>
            <param-value>GET,POST,HEAD,OPTIONS,PUT,PATCH,DELETE</param-value>
        </init-param>
        <init-param>
            <param-name>cors.support.credentials</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>cors.allowed.headers</param-name>
            <param-value>Origin, Accept, X-Requested-With, Content-Type, Access-Control-Request-Method, Access-Control-Request-Headers, Authorization</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
